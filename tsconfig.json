    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,

    "target": "es6",
    "moduleResolution": "node",
    
    "outDir": "./build"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "lib": [
    "es6"
  ],
  "types": [
    "babylonjs",
    "dom",
    "es6"
  ]
}
